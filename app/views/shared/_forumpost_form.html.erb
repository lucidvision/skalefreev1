<%= form_for @forumpost, :remote => true do |f| %>
  <div class="field">
    <%= f.hidden_field :forum, :id => "wallpost" %>
    <%= f.label :content, "Write a post" %>
    <%= f.text_area :content %>
  </div><br>
  <%= f.submit "Post", :onclick => "refresh_search()", :id => "first", class: "btn btn-large btn-primary" %>
<% end %>