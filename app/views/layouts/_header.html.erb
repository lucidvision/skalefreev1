<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <%= link_to image_tag("logo.jpg"), root_path %>
        <ul class="nav pull-right">
          <li><%= link_to "Class Schedules", findyou_path %></li>
          <li><%= link_to "News Feed", wall_path %></li>
          <% if signed_in? %>
            <% if current_user.admin? %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li><%= link_to @unread_count + " Mail", conversations_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Edit Profile", edit_profile_path(current_user) %></li>
                <li><%= link_to "Edit Login", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li>
                  <li><%= link_to "Sign out", :destroy_user_session, method: :delete %></li>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", :new_user_session %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>