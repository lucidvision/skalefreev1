<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "ScaleFree", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to "Find You", root_path %></li>
            <li><%= link_to "Find Me", findme_path %></li>
            <li><%= link_to "Convo", conversations_path %></li>
            <% if current_user.admin? %>
              <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li><%= link_to "Profile", current_user %></li>
            <li><%= link_to "Edit Profile", edit_profile_path(current_user) %></li>
            <li><%= link_to "Edit Login", edit_user_registration_path %></li>
            <li><%= link_to "Sign out", :destroy_user_session, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign in", :new_user_session %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>