<% provide(:title, 'Search') %>
<div class="row">
  <aside class="span4">
    <% if signed_in? %> 
      <section>
        <%= render 'shared/user_info' %>
      </section>
    <% else %>
      <section>
        <h1>Welcome to SFU Wallposts!</h1> 
        Visit our <%= link_to "about", about_path %> page for more information.<br><br>
        Please <%= link_to "sign up", :new_user_registration%> for access to profiles and messaging.<br><br>
        Visit <%= link_to "findposts", findyou_path %> to find people.<br><br>
        Or search for wallposts below.<br><br>
      <section>
    <% end %>
    <section>
      <%= render 'shared/wall_form' %>
      <h4>You have selected the wall:<br><br><div id="wall_selection"></div></h4>
      <% if signed_in? %> 
        <%= render 'shared/forumpost_form' %>
      <% else %>
        Please <%= link_to "sign up", :new_user_registration%> to create wallposts!
      <% end %>
    </section>
    <section>
      <p>
        <b>Website Statistics</b><br>
        Number of Users: <%= User.all.count %><br>
        Number of Wallposts: <%= Forumpost.all.count %><br>
        Number of Findposts: <%= Findpost.all.count %><br>
        Number of Messages: <%= Message.all.count %><br>
      </p>
    </section>
  </aside>
  <div class="span8">
    <h3 class="f_title">Wallposts</h3>
    <% if @wall.any? %>
      <ul class="wall_results">
        <%= render @wall %>
      </ul>
    <% else %> 
      <div class="wall_results"><br><br>
        Sorry, your search has 0 results
      </div>
    <% end %>
  </div>
  <div id="paginator">
    <%= paginate @wall, :theme => 'twitter-bootstrap', :remote => true %>
  </div>
</div>  
