<% provide(:title, 'Wallposts') %>
<div data-role="content">
  <div data-role="collapsible">
    <h3>Categories</h3>
    Confessions<br>
    Funny<br>
    Did You Know<br>
    Games<br>
    News<br>
    Academic<br>
    Social<br>
    SFU<br>
    Sport<br>
    Intellectual<br>
    Entertainment<br>
    WTF<br>
    Music<br>
    Club<br>
    Skalefree<br>
  </div>
  <%= render 'shared/wall_form' %>
  <% if signed_in? %> 
    <%= render 'shared/forumpost_form' %>
  <% end %>
  <% if @wall.any? %>
    <h3>Wallposts for </h3><span id="wall_selection"></span>
    <ul data-role="listview", class="wall_mobile", id="mobile_refresh">
      <%= render @wall %>
      <%= paginate @wall %>
    </ul>
  <% else %>
    <br><br>
    <h3>Sorry, your search has 0 results.</h3>
  <% end %>
</div>