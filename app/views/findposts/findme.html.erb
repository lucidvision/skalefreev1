<% provide(:title, 'Create') %>
<div class="row">
  <aside class="span4">
    <section style = "padding:10px;background-color:#D6FFFF;border-top:1px solid #000000;border-bottom:1px solid #000000;">
      <%= render 'shared/user_info' %>
    </section>
    <br>
    <br>
    <section style = "padding:10px;background-color:#D6FFFF;border-top:1px solid #000000;border-bottom:1px solid #000000;">
      <b>Create Findpost</b><br><br>
      <%= render 'shared/findpost_form' %>
    </section>
    <br>
    <br>
    <section style = "padding:10px;background-color:#D6FFFF;border-top:1px solid #000000;border-bottom:1px solid #000000;">
      <p>
        <b>Suggested Criteria:</b><br>
        1. Purpose <br>
        2. Location <br>
        3. Time <br>
        4. Goal <br>
        5. Interests <br>
        6. Condition <br>
        8. Qualification <br>
        9. Personality <br>
        10. Additional Information <br><br>
      </p>
    </section>
  </aside>
  <div class="span8">
    <% if @user.findposts.any? %>
      <h3 class="f_title">Create Findposts (<%= @user.findposts.count %>)</h3>
      <ol class="findposts">
        <%= render @findposts %>
      </ol>
    <% end %>
  </div>
  <div id="paginatorf">
    <%= paginate @findposts, :theme => 'twitter-bootstrap', :remote => true %>
  </div>
</div>
