<% provide(:title, 'Class Schedules') %>
<div data-role="content">
  <% if signed_in? %>
    <%= button_to "Add Schedule", findme_path, :class => "btn btn-success"%>
  <% end %>
  <%= render 'shared/search_form' %>
  <% if @results.any? %>
    <h3>SFU Class Schedules</h3>
    <ul data-role="listview">
      <%= render @results %>
      <%= paginate @results %>
    </ul>
  <% else %>
    <br><br>
    <h3>Sorry, your search has 0 results.</h3>
  <% end %>
</div>