<% provide(:title, 'Find People') %>
<div data-role="content">
    <%= render 'shared/search_form' %>
  <% if @results.any? %>
    <h3>Search Findposts</h3>
    <ul data-role="listview">
      <%= render @results %>
      <%= paginate @results %>
    </ul>
  <% else %>
    <br><br>
    <h3>Sorry, your search has 0 results.</h3>
  <% end %>
</div>