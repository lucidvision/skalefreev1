<% provide(:title, 'Search') %>
<div class="row">
  <aside class="span4">
    <% if signed_in? %> 
      <section style = "padding:10px;background-color:#D6FFFF;border-top:1px solid #000000;border-bottom:1px solid #000000;">
        <%= render 'shared/user_info' %>
      </section>
    <% else %>
      <section>
        <h1>Welcome to Skalefree @ SFU!</h1> 
        Visit our <%= link_to "help", help_path %> page for more information.<br><br>
        Please <%= link_to "sign up", :new_user_registration%> to create findposts, access profiles, and send messages.<br><br>
        Or search for people below.<br><br>
      <section>
    <% end %>
    <br>
    <br>
    <section style = "padding:10px; background-color:#D6FFFF;border-top:1px solid #000000;border-bottom:1px solid #000000;">
      <%= render 'shared/search_form' %>
    </section>
    <br>
    <br>
    <section style = "padding:10px;background-color:#D6FFFF;border-top:1px solid #000000;border-bottom:1px solid #000000;">
      <p>
        <b>Website Statistics</b><br>
        Number of Users: <%= User.all.count %><br>
        Number of Findposts: <%= Findpost.all.count %><br>
        Number of Wallposts: <%= Forumpost.all.count %><br>
        Number of Messages: <%= Message.all.count %><br>
      </p>
    </section>
  </aside>
  <div class="span8">
    <h3 class="f_title">Search Findposts</h3>
    <ol class="results">
      <%= render @results %>
    </ol>
  </div>
  <div id="paginatorr">
    <%= paginate @results, :theme => 'twitter-bootstrap', :remote => true %>
  </div>
</div>  
