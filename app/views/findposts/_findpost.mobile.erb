<li>
  <span class="id"><%= findpost.c1 %></span><br>
  <span class="c1"><%= findpost.c2 %></span><br>
  <span class="c1"><%= findpost.c3 %></span><br>
  <span class="c1"><%= findpost.c4 %></span><br>
  <span class="c1"><%= findpost.c5 %></span><br>
  <span class="c1"><%= findpost.c6 %></span><br>
  <div class="f_info">
    <span>
      Posted <%= time_ago_in_words(findpost.created_at) %> ago
    </span>
    <% if current_user == findpost.user %>
    	<span>
  		  by you | <%= link_to "Delete", findpost, method: :delete,
                                       data: { confirm: "Are you sure?" },
                                       title: findpost.c1 %>
  		</span>
    <% else %>
    	<a href="<%= user_path(findpost.user) %>">
  		</a>
  		<span>
  		  by <%= link_to findpost.user.name, findpost.user %> | <%= link_to "Send Message", new_conversation_path( target: findpost.user.name, reason: findpost.c1 ) %>
  		</span>
    <% end %>
  </div>
</li>