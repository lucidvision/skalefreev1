<% provide(:title, 'Forum') %>
<div class="row">
  <aside class="span4">
    <% if signed_in? %> 
      <section>
        <%= render 'shared/user_info' %>
      </section>
    <% else %>
      <section>
        <h1>Welcome to the Skalefree Forum!</h1> 
        Visit our <%= link_to "about", about_path %> page for more information.<br><br>
        Please <%= link_to "sign up", :new_user_registration%> to create forumposts, access profiles, and message users.<br><br>
        Or search for forums below.<br><br>
      <section>
    <% end %>
    <section>
      <%= render 'shared/wall_form' %>
      <h4>You have selected the forum:<br><br><div id="wall_selection"></div></h4>
      <% if signed_in? %> 
        <%= render 'shared/forumpost_form' %>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3 class="f_title">Forumposts</h3>
    <ul class="wall_results">
      <%= render @wall %>
    </ul>
  </div>
  <div id="paginator">
    <%= paginate @wall, :theme => 'twitter-bootstrap', :remote => true %>
  </div>
</div>  
